{
  "name": "effect-ax",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "example:telegram": "bun run src/app/examples/telegram-echo.ts",
    "example:telegram-max": "bun run src/app/examples/telegram-max.ts",
    "db:introspect": "drizzle-kit introspect --config=drizzle.config.ts",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config=drizzle.config.ts",
    "db:health": "bun run src/app/tools/db-health.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.5",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@ax-llm/ax": "latest",
    "@electric-sql/pglite": "^0.3.11",
    "@neondatabase/serverless": "^1.0.2",
    "drizzle-orm": "^0.44.7",
    "effect": "latest",
    "telegraf": "^4.16.3"
  }
}
